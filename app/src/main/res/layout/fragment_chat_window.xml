<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorLight"
                android:id="@+id/chatLayout"
                android:orientation="vertical">

    <include layout="@layout/chat_toolbar" />

    <org.hvkz.hvkz.modules.chats.window.messages.MessagesListView
        android:layout_marginTop="50dp"
        android:id="@+id/msgListView"
        android:scrollbars="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/attachments" />

    <HorizontalScrollView
        android:id="@+id/attachments"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:scrollbars="none"
        android:layout_above="@+id/form"
        android:elevation="5dp"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:id="@+id/img_attach"
                android:layout_width="wrap_content"
                android:layout_height="70dp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/forwardedInfo"
                android:layout_margin="@dimen/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/attachments_shadow"
                android:textColor="@color/colorTitle"
                android:padding="@dimen/six"/>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:elevation="5dp"
        tools:ignore="UnusedAttribute">

        <LinearLayout
            android:id="@+id/pickPhotoLayout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/ripple_default">

            <ImageView
                android:id="@+id/pickPhotoButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:layout_marginTop="2dp"
                android:background="@mipmap/uploadphoto" />

        </LinearLayout>

        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:inputType="textCapSentences|textAutoCorrect|textMultiLine|textAutoComplete"
            android:maxLines="4"
            android:hint="@string/type_the_message"
            android:textColorHint="#b4b4b4"
            android:textSize="17sp"
            android:background="@android:color/transparent"
            android:minHeight="40dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/sendMessageLayout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/ripple_default">

            <ImageView
                android:id="@+id/sendMessageButton"
                android:background="@mipmap/send_button"
                android:layout_height="25dp"
                android:clickable="false"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_width="25dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/datetime_view"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp">

        <android.support.v7.widget.CardView
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="1sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/datetime"
                android:padding="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#acacac"
                android:textSize="13sp" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>