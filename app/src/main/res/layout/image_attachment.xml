<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/six"
        android:background="@drawable/imgplaceholder"
        android:alpha="0.5"
        xmlns:android="http://schemas.android.com/apk/res/android"/>

    <com.eralp.circleprogressview.CircleProgressView
        android:id="@+id/circle_progress_view"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/six"
        android:layout_centerInParent="true"
        app:cpv_text_size="0"
        app:cpv_text_color="#00ffffff"
        app:cpv_circle_color="#fff"
        app:cpv_circle_width="4dp"
        app:cpv_background_circle_width="2dp"
        app:cpv_background_circle_color="#7e7e7e"/>

</RelativeLayout>