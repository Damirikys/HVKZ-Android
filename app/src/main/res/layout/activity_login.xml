<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:gravity="center"
                android:background="@color/colorPrimary"
                tools:context="org.hvkz.hvkz.auth.AuthActivity">

    <LinearLayout
        android:id="@+id/phone_login_form"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/sixteen"
        android:paddingRight="@dimen/sixteen"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:fontFamily="casual"
            android:text="@string/login_title"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/phone_input_layout"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.pinball83.maskededittext.MaskedEditText
                android:id="@+id/phone_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_phone_number"
                android:textCursorDrawable="@null"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAlignment="center"
                android:inputType="number"
                app:mask="+7-(***)-***-**-**"
                app:notMaskedSymbol="*"
                app:maskIconColor="@color/colorWhite"
                android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/code_input_layout"
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/code_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите код"
                android:textCursorDrawable="@null"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="6"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sign_in_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryDarkest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="20dp"
            android:text="@string/action_code_sent"
            android:enabled="false"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/enter_with_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/sixteen"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDarkest"
            android:textAllCaps="false"
            android:background="?android:attr/selectableItemBackground"
            android:text="Войти с помощью E-Mail и пароля"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_login_form"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/sixteen"
        android:paddingRight="@dimen/sixteen"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:fontFamily="casual"
            android:text="@string/login_title"/>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите E-Mail"
                android:textCursorDrawable="@null"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAlignment="center"
                android:inputType="textEmailAddress"
                android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите пароль"
                android:textCursorDrawable="@null"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:maxLines="1"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/emailEnterButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryDarkest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="20dp"
            android:text="Войти"
            android:enabled="true"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/enter_with_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/sixteen"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDarkest"
            android:textAllCaps="false"
            android:background="?android:attr/selectableItemBackground"
            android:text="Войти с помощью номера телефона"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="@string/sms_description"
        android:textColor="@color/colorPrimaryDarkest"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/sixteen"
        android:paddingRight="@dimen/sixteen"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:foregroundGravity="bottom"
        android:gravity="bottom"/>

    <FrameLayout
        android:id="@+id/splash_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:fontFamily="casual"
            android:text="@string/welcome"/>

    </FrameLayout>

</RelativeLayout>
