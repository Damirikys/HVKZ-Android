<?xml version="1.0" encoding="utf-8"?>
<com.allattentionhere.fabulousfilter.AAH_FilterView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:visibility="invisible"
        android:elevation="5dp"
        tools:ignore="MissingPrefix,UnusedAttribute"
        tools:visibility="visible">

        <RelativeLayout
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/titlePanel"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/sixteen"
                    android:text="Создание группы"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/completeButton"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="right"
                        app:srcCompat="@drawable/apply"
                        android:background="@drawable/ripple_orange_button"/>

                </FrameLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_below="@id/titlePanel"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/sixteen"
                android:background="@color/colorLight"/>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/groupNotice"
                android:layout_below="@id/divider"
                android:paddingLeft="@dimen/sixteen"
                android:paddingRight="@dimen/sixteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/noticeInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Информация для группы"
                    android:textSize="18sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:inputType="textCapSentences"
                    android:singleLine="true"
                    android:maxLines="1"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/nameEditText"
                android:layout_below="@id/groupNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/sixteen"
                android:background="#e6e6e6"
                android:layout_marginTop="@dimen/sixteen"
                android:hint="Имя, телефон, email или ID участника"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:singleLine="true"
                android:maxLines="1"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/usersRecyclerView"
            android:background="@color/colorLight"
            android:layout_below="@id/editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</com.allattentionhere.fabulousfilter.AAH_FilterView>