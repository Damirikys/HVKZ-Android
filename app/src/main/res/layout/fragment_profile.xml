<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/profileScrollView"
        android:fadingEdgeLength="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimaryDark">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/sixteen"
                    android:layout_marginRight="@dimen/sixteen">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/photo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:border_width="1dp"
                        app:border_color="@color/colorPrimaryDarkest"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sixteen"
                        android:layout_marginRight="@dimen/sixteen">

                        <TextView
                            android:id="@+id/full_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ф.И.О."
                            android:textSize="20sp"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/group_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Статус"
                            android:textSize="14sp"
                            android:textColor="@color/colorLight"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/six"
                    android:layout_marginLeft="@dimen/sixteen"
                    android:layout_marginRight="@dimen/sixteen"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableLayout
                            android:id="@+id/table_layout"
                            android:padding="@dimen/six"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow>
                                <TextView
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="12sp"
                                    android:text="Грудь"/>

                                <TextView
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="12sp"
                                    android:text="Под грудью"/>

                                <TextView
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="12sp"
                                    android:text="Талия"/>

                                <TextView
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:text="Таз"/>

                                <TextView
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="12sp"
                                    android:text="Ягодицы"/>

                                <TextView
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="12sp"
                                    android:text="Бедра"/>
                            </TableRow>
                            <TableRow>
                                <TextView
                                    android:id="@+id/chest_value"
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="22sp"/>

                                <TextView
                                    android:id="@+id/underchest_value"
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="22sp"/>

                                <TextView
                                    android:id="@+id/waist_value"
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="22sp"/>

                                <TextView
                                    android:id="@+id/pelvis_value"
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="22sp"/>

                                <TextView
                                    android:id="@+id/buttocks_value"
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="22sp"/>

                                <TextView
                                    android:id="@+id/thighs_value"
                                    android:paddingStart="@dimen/six"
                                    android:paddingLeft="@dimen/six"
                                    android:paddingEnd="@dimen/six"
                                    android:textSize="22sp"/>
                            </TableRow>
                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorLight">
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:padding="@dimen/sixteen"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:text="Рост:"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:text="Вес:"/>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:paddingTop="@dimen/sixteen"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/height_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"/>

                                <TextView
                                    android:id="@+id/weight_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="@dimen/sixteen"
                                android:layout_marginRight="@dimen/sixteen"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorLight"/>

                            <TableLayout
                                android:paddingTop="@dimen/six"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TableRow>
                                    <TextView
                                        android:layout_marginLeft="@dimen/six"
                                        android:layout_marginStart="@dimen/six"
                                        android:layout_marginEnd="@dimen/six"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="ИМТ"
                                        android:textSize="16sp"/>
                                    <TextView
                                        android:layout_marginLeft="@dimen/sixteen"
                                        android:layout_marginStart="@dimen/sixteen"
                                        android:layout_marginEnd="@dimen/sixteen"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Цель"
                                        android:textSize="16sp"/>
                                    <TextView
                                        android:layout_marginLeft="@dimen/six"
                                        android:layout_marginStart="@dimen/six"
                                        android:layout_marginEnd="@dimen/six"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="Идеал"
                                        android:textSize="16sp"/>
                                </TableRow>

                                <TableRow>
                                    <TextView
                                        android:id="@+id/imt_value"
                                        android:layout_marginLeft="@dimen/six"
                                        android:layout_marginStart="@dimen/six"
                                        android:layout_marginEnd="@dimen/six"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="30sp"/>
                                    <TextView
                                        android:id="@+id/target_weight_value"
                                        android:layout_marginLeft="@dimen/sixteen"
                                        android:layout_marginStart="@dimen/sixteen"
                                        android:layout_marginEnd="@dimen/sixteen"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="30sp"/>
                                    <TextView
                                        android:id="@+id/ideal_weight_value"
                                        android:layout_marginLeft="@dimen/six"
                                        android:layout_marginStart="@dimen/six"
                                        android:layout_marginEnd="@dimen/six"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textSize="30sp"/>
                                </TableRow>

                            </TableLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_margin="@dimen/sixteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Моя галерея:"
                    android:textSize="16sp"
                    android:textColor="@color/colorTitle"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLight">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerGalleryView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/sixteen"
        android:clickable="true"
        app:rippleColor="@color/colorPrimaryDarkest"
        app:srcCompat="@drawable/ic_plus"
        app:elevation="4dp"/>

</RelativeLayout>
